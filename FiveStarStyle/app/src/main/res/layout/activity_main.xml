<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"

    android:orientation="vertical">

    <ScrollView
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/main_image" />

            <ImageButton
                android:id="@+id/choose_my_outfit"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:contentDescription="@string/choose_my_outfit"
                android:padding="00dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/choose_my_outfit" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageButton
                android:id="@+id/view_my_closet"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:contentDescription="@string/view_my_closet"
                android:padding="00dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/view_my_closet" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageButton
                android:id="@+id/add_to_my_closet"
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:padding="00dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/add_to_my_closet" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageButton
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:contentDescription="@string/overview"
                android:padding="00dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/overview" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>

