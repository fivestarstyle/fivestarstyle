<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/stars_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />
    </LinearLayout>



    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/textView"
                android:textSize="60sp"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="@string/header_name"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageButton
                android:id="@+id/choose_my_outfit"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:contentDescription="@string/choose_my_outfit"
                android:padding="00dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/choose_my_outfit" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="47dp" />

            <ImageButton
                android:id="@+id/view_my_closet"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:contentDescription="@string/view_my_closet"
                android:padding="00dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dresses" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="47dp" />

            <ImageButton
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:contentDescription="@string/overview"
                android:padding="00dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/overview" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>

