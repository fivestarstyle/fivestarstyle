<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmLabels">




    <android.support.design.widget.TabLayout
        android:id="@+id/simpleTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorBackground"
        app:tabSelectedTextColor="@color/colorBackground"

        app:tabTextColor="@color/colorBackground" />



    <FrameLayout
        android:id="@+id/simpleFrameLayout"
        android:layout_width="411dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" >

        <Button
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="285dp"
            android:layout_marginBottom="30dp"
            android:text="Next"
            android:theme="@style/ButtonTheme" />

        <Button
            android:id="@+id/left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:text="Back"
            android:theme="@style/ButtonTheme" />


        <LinearLayout
            android:id="@+id/stars_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:contentDescription="@string/top_star"
                android:tint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_round_grade_24px" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:contentDescription="@string/top_star"
                android:tint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_round_grade_24px" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:contentDescription="@string/top_star"
                android:tint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_round_grade_24px" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:contentDescription="@string/top_star"
                android:tint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_round_grade_24px" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:contentDescription="@string/top_star"
                android:tint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_round_grade_24px" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:layout_marginStart="110dp"
            android:text="@string/confirm_labels"
            android:textColor="@color/colorPrimary"
            android:id="@+id/confirm_labels"
            android:textSize="31sp" />



    </FrameLayout>

</android.support.constraint.ConstraintLayout>