<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClosetStatistics">



    <LinearLayout
        android:id="@+id/stars_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:contentDescription="@string/top_star"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_round_grade_24px" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="@string/confirm_colors"
        android:textColor="@color/colorPrimary"
        android:id="@+id/confirm_colors"
        android:textSize="31sp" />

</RelativeLayout>
